{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["node"],
    "outDir": "./build",
    "rootDir": "./src",
  },
  "include": ["src/**/*"],
  "exclude": ["build", "src/tests"]
}
